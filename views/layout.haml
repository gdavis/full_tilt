!!! 5
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }    

    / Always force latest IE rendering engine (even in intranet) & Chrome Frame
    %meta{ :content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }

    / Comment in layout

    = stylesheet_link_tag "site.css"

    / include JS libs
    = javascript_include_tag "platform_helper.js"
    = javascript_include_tag "jquery-1.6.1.min.js"
    = javascript_include_tag "left-right-gallery.js"
    = javascript_include_tag "application.js"
    = javascript_include_tag "function_util.js"
    = javascript_include_tag "jquery.pngFix.js"
    = javascript_include_tag "cufon-yui.js"
    = javascript_include_tag "TwCenMT.font.js"
    = javascript_include_tag "HelveticaNeue.font.js"

    :javascript
      // Comment in javascript
      $(document).ready(function() {
        Cufon.replace(".helvetica, .helvetica-bold", { fontName:"HelveticaNeue" });
      });

    = yield_content :head
    
  %body{ :class => page_classes }
    #frame
      :javascript
          $('#frame').addClass('js-enabled');
      #header.bucket
        .title
          %span.helvetica grant
          %span.helvetica-bold davis
          %span.helvetica-bold.ext .net
        .info.tw-cen-mt
          = link_to "grant.davis@gmail.com", "mailto:grant.davis@gmail.com"
          %span ::
          = link_to "download resumé", "media/pdf/Grant-Davis-2011.pdf"
      #content
        = yield
      #footer.project_header
        © Copyright 2011 Grant Davis Interactive, LLC