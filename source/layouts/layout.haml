!!! 5
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }

    / Page information
    %meta{ :name => 'description', :content => 'Online portfolio for Grant Davis, Freelance Mobile and Web Developer.' }
    %meta{ :name => 'keywords', :content => 'ios, iphone, ipad, developer, programmer, objective-c, cocoa, cocoa touch, actionscript, flash, html, javascript, denver, colorado, freelance, contract' }

    / Always force latest IE rendering engine (even in intranet) & Chrome Frame
    %meta{ :content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }

    / fav icon
    %link{ :rel => "shortcut icon", :href => "/favicon.ico" }

    / Primary stylesheet
    = stylesheet_link_tag "site.css"

    / include JS libs
    = javascript_include_tag "platform_helper.js"
    = javascript_include_tag "jquery-1.6.1.min.js"
    = javascript_include_tag "left-right-gallery.js"
    = javascript_include_tag "gallery-menu.js"
    = javascript_include_tag "application.js"
    = javascript_include_tag "function_util.js"
    = javascript_include_tag "jquery.pngFix.js"
    = javascript_include_tag "cufon-yui.js"
    = javascript_include_tag "HelveticaNeue.font.js"
    = javascript_include_tag "TwCenMT.font.js"

    :javascript
      Cufon.replace(".helvetica, .helvetica-bold", { fontFamily:"HelveticaNeue" });
      Cufon.replace(".tw-cen-mt, .tw-cen-mt-bold", { fontFamily:"TwCenMT", hover:'true' });

    = yield_content :head
    
  %body{ :class => page_classes }
    #frame
      :javascript
          $('#frame').addClass('js-enabled');
      #header.bucket
        .title
          %img{ :src => '/images/gdi-logo.jpg', :alt => "Grant Davis Interactive, LLC" }
        .info.tw-cen-mt
          %a{ :href => "media/pdf/Grant-Davis.pdf", :target => "_blank"} resume
          %span ::
          = link_to "email", "mailto:grant@grantdavisinteractive.com", :target => '_blank'
          %span ::
          = link_to "linkedIn", "http://www.linkedin.com/pub/grant-davis/5/156/638", :target => '_blank'
      #content
        = yield
      #footer.project_header
        The elments compiled on this page are for informational purposes only and are owned by the client listed with each project.
        %br These works were produced while working for the agency listed. ©2011 Grant Davis Interactive, LLC

      :javascript 
        <!-- To avoid delays, initialize Cufón before other scripts at the bottom -->
        Cufon.now();